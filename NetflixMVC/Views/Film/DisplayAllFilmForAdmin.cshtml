<head>
    <link rel="stylesheet" href="~/table.css">
</head>

@model IEnumerable<NetflixMVC.Entities.Film>

    <td><button class="create"><a href="~/Film/CreateFilm">Add film</a></button></td>
<table class="table">
    <thead>
        <tr>
            <th>Название</th>
            <th>Rating</th>
            <th>Genre</th>
            <th>Producer</th>
            <th>Release data</th>
            <th>Edit</th>
            <th>Delete</th>
            <th>More..</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Rating</td>
                <td>@item.Genre</td>
                <td>@item.Producer</td>
                <td>@item.ReleaseData</td>
                <td>
                    <button class="submits">
                        <a href="~/Film/EditFilm?id=@item.Id">edit film</a>
                    </button>
                </td>
                <td>
                    <button class="submits">
                        <a href="~/Film/DeleteFilm?id=@item.Id">delete film</a>
                    </button>
                </td>
                <td><a href="~/Film/AdditionalInformationForAdmin?filmId=@item.Id">Additional information</a></td>
            </tr>
        }
    </tbody>
</table>