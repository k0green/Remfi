<head>
    <link rel="stylesheet" href="~/table.css">
</head>

@model IEnumerable<NetflixMVC.Models.FilmUserDisplayModel>

<form action="~/Film/FindFilm">
    <button class="move">Main page</button>
</form>
<form action="~/Film/CreateFilm">
    <button class="move">Add film</button>
</form>
@*<button class="create"><a href="~/Film/CreateFilm">Add film</a></button>*@
<table class="table">
    <thead>
        <tr>
            <th>Favorite</th>
            <th>Название</th>
            <th>Rating</th>
            <th>Genre</th>
            <th>Producer</th>
            <th>Release data</th>
            <th>Number of view</th>
            <th>Edit</th>
            <th>Delete</th>
            <th>More..</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
                <td>
                    @if(item.Favorites)
                    {
                        <button class="add">
                            <a href="~/UserFilm/AddToFavorite?filmId=@item.FilmId&favorite=false">-</a>
                        </button>
                    }
                    else
                    {
                        <button class="add">
                            <a href="~/UserFilm/AddToFavorite?filmId=@item.FilmId&favorite=true">+</a>
                        </button>
                    }
                </td>
            <td>@item.Name</td>
            <td>@item.Rating</td>
            <td>@item.Genre</td>
            <td>@item.Producer</td>
            <td>@item.ReleaseData</td>
                <td>@item.NumberOfView  <button class="add"><a href="~/UserFilm/AddAmountOfView?id=@item.FilmId">+</a></button></td>
               <td><button class="submits">
                    <a href="~/Film/EditFilm?id=@item.FilmId">edit film</a>
                </button></td>
            <td><button class="submits">
                        <a href="~/UserFilm/DeleteUserFilmConnection?filmId=@item.FilmId">delete film</a>
                </button></td>
                <td>
                    <button class="submits">
                        <a href="~/Film/AdditionalInformation?filmId=@item.FilmId">Additional information</a>
                    </button>
                </td>
        </tr>
        }
    </tbody>
</table>
